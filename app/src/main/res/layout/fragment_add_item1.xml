<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.codegreeddevelopers.patapotea.AddItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">


        <customfonts.MyTextView_OpenSans_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="51.3dp"
            android:text="Item Type :"
            android:textColor="#338df8"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14.3dp"
            android:background="@drawable/spinner_background"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/sp_item_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_spinner"
                android:spinnerMode="dropdown">

            </Spinner>

        </LinearLayout>

        <customfonts.MyTextView_OpenSans_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="33.3dp"
            android:text="Item Number :"
            android:textColor="#338df8"
            android:textSize="14sp"
            />

            <customfonts.EditText_OpenSans_SemiBold
                android:id="@+id/item_number"
                android:layout_width="297dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:background="@drawable/spinner_background"
                android:paddingLeft="10dp"
                android:textSize="13sp" />




        <customfonts.MyTextView_OpenSans_SemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="33dp"
            android:text="Item name:"
            android:textColor="#338df8"
            android:textSize="14sp"
            />

        <customfonts.EditText_OpenSans_SemiBold
            android:id="@+id/item_name"
            android:layout_width="297dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:background="@drawable/spinner_background"
            android:paddingLeft="10dp"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>
