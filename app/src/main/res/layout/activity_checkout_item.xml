<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        android:layout_alignParentLeft="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/pmainappbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="#FFFFFF"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <ImageView
                    android:id="@+id/piv_shop"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:minHeight="?attr/actionBarSize"
                    android:src="@drawable/item_diaplay_placeholder"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:translationZ="1dp"
                    app:layout_collapseMode="pin"

                    >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/pbackArrow"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_back_arrow"
                            android:backgroundTint="#FFFFFF"/>
                        <ImageView
                            android:id="@+id/pbackArrow1"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_back_arrow"
                            android:visibility="gone" />


                        <ImageView
                            android:id="@+id/pimg_logo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="40dp"
                            android:layout_toRightOf="@+id/navigation_menu"
                            android:background="@drawable/t"
                            android:visibility="gone"
                            tools:ignore="UnknownId" />


                        <customfonts.MyTextView_OpenSans_Regular
                            android:id="@+id/ptxtheading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/pimg_logo"
                            android:text="Ketan Car Point"
                            android:textSize="16sp"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:layout_alignParentLeft="true">


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </FrameLayout>


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/pimg_share"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/ic_share"
                                    android:backgroundTint="#FFFFFF"/>

                                <ImageView
                                    android:id="@+id/pimg_share1"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/ic_share"
                                    android:visibility="gone" />

                            </FrameLayout>

                        </LinearLayout>
                    </RelativeLayout>


                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_overlapTop="100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/plogo_botswana"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/t"
                    android:maxLength="1"
                    android:padding="15dp"
                    android:text="R"
                    android:textSize="24sp"
                    android:translationZ="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="50dp">


                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                           android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            app:cardElevation="2dp"
                            app:contentPadding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <customfonts.MyTextView_OpenSans_SemiBold
                                    android:id="@+id/ptextview1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:text="National Identity"
                                    android:textColor="#444445"
                                    android:textSize="16.7sp"
                                    />

                                <customfonts.MyTextView_OpenSans_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Name"
                                    android:textColor="#4fc631"
                                    android:textSize="15.3sp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="11dp"
                                    android:layout_marginRight="18dp"
                                    android:orientation="horizontal">

                                <customfonts.MyTextView_OpenSans_Regular
                                    android:id="@+id/pitem_name_display"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="------------"
                                    android:textColor="#aab0b9"
                                    android:textSize="15.3sp"
                                    />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:weightSum="1"
                                    android:layout_marginRight="18dp"
                                    android:orientation="horizontal">

                                <customfonts.MyTextView_OpenSans_Regular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Number"
                                    android:layout_weight="0.5"
                                    android:textColor="#4fc631"
                                    android:textSize="15.3sp"
                                    />
                                    <customfonts.MyTextView_OpenSans_Regular
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Date Found"
                                        android:textColor="#4fc631"
                                        android:textSize="15.3sp"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="11dp"
                                    android:weightSum="1"
                                    android:layout_marginRight="18dp"
                                    android:orientation="horizontal">

                                    <customfonts.MyTextView_OpenSans_Regular
                                        android:id="@+id/pitem_number_display"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-------------"
                                        android:layout_weight="0.5"
                                        android:textColor="#aab0b9"
                                        android:ellipsize="end"
                                        android:textSize="15.3sp"
                                        />

                                    <customfonts.MyTextView_OpenSans_Regular
                                        android:id="@+id/pdate_found_display"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.5"
                                        android:layout_marginLeft="20dp"
                                        android:text="------------" />
                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>



                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:weightSum="1"
                                android:orientation="vertical">

                            <customfonts.MyTextView_OpenSans_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="18dp"
                                android:text="Payment Status"
                                android:textColor="#4fc631"
                                android:textSize="15.3sp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="11dp"
                                android:layout_marginRight="18dp"
                                android:layout_marginBottom="11dp"
                                android:orientation="horizontal">

                                <customfonts.MyTextView_OpenSans_Regular
                                    android:id="@+id/payment_status"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Fully Paid"
                                    android:textColor="#aab0b9"
                                    android:textSize="15.3sp"
                                    />
                            </LinearLayout>

                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>



                </LinearLayout>


            </FrameLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/linear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4fc631"
        android:orientation="vertical">

        <customfonts.MyTextView_OpenSans_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:text="Check Out Item"
            android:textColor="#000000"
            android:textSize="16.7sp"
            />
    </LinearLayout>
</RelativeLayout>